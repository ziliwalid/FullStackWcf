<Window x:Class="HomeWorkCC1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWorkCC1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Label Content="Email" HorizontalAlignment="Left" Margin="207,104,0,0" VerticalAlignment="Top" Width="88"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="207,159,0,0" VerticalAlignment="Top" Width="88"/>
        <TextBox Text="{Binding User.Email}" HorizontalAlignment="Left" Margin="400,112,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" />
        <TextBox Text="{Binding User.Password}" HorizontalAlignment="Left" Margin="400,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <Button Command="{Binding LoginCommand}"
            Content="Login" HorizontalAlignment="Left" Margin="251,217,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.631,-1.752" Width="269" />
    </Grid>
</Window>
